<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#EEF3FA">

    <!-- Display -->
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@android:color/transparent"
        android:gravity="bottom|end"
        android:padding="16dp"
        android:textSize="36sp"
        android:textColor="@android:color/black"/>

    <!-- Grid of buttons -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:columnCount="4"
        android:rowCount="6">


        <!-- Second row -->
        <Button
            android:id="@+id/ac"
            android:text="AC"
            style="@style/CalcButton"
            android:backgroundTint="#C6EFD4"/>
        <Button
            android:id="@+id/bracket"
            android:text="()"
            style="@style/CalcButton"/>
        <Button
            android:id="@+id/percentage"
            android:text="%"
            style="@style/CalcButton"/>
        <Button
            android:id="@+id/divide"
            android:text="÷"

            style="@style/CalcButton"/>



        <!-- Third row -->
        <Button
            android:id="@+id/btn7"
            android:text="7"
            android:onClick="check"
            style="@style/CalcButton"/>

        <Button
            android:id="@+id/btn8"
            android:text="8"
            android:onClick="check"
            style="@style/CalcButton"/>

        <Button
            android:id="@+id/btn9"
            android:text="9"
            android:onClick="check"
            style="@style/CalcButton"/>

        <Button
            android:id="@+id/multiply"
            android:text="*"
            android:onClick="check"
            style="@style/CalcButton"/>




        <!-- Fourth row -->


        <Button
            android:id="@+id/btn4"
            android:text="4"
            android:onClick="check"
            style="@style/CalcButton"/>

        <Button
            android:id="@+id/btn5"
            android:text="5"
            android:onClick="check"
            style="@style/CalcButton"/>


        <Button
            android:id="@+id/btn6"
            android:text="6"
            android:onClick="check"
            style="@style/CalcButton"/>
        <Button
            android:id="@+id/minus"
            android:text="−"
            android:onClick="check"
            style="@style/CalcButton"/>

        <!-- Fifth row -->
        <Button
            android:id="@+id/btn1"
            android:text="1"
            android:onClick="check"
            style="@style/CalcButton"/>

        <Button
            android:id="@+id/btn2"
            android:text="2"
            android:onClick="check"
            style="@style/CalcButton"/>

        <Button
            android:id="@+id/btn3"
            android:text="3"
            android:onClick="check"
            style="@style/CalcButton"/>


        <Button
            android:id="@+id/plus"
            android:text="+"
            android:onClick="check"
            style="@style/CalcButton"/>

        <!-- Sixth row -->
        <Button
            android:id="@+id/btn0"
            android:text="0"
            android:onClick="check"
            style="@style/CalcButton"/>


        <Button
            android:id="@+id/dot"
            android:text="."
            android:onClick="check"
            style="@style/CalcButton"/>

        <Button
            android:id="@+id/delete"
            android:text="⌫"
            style="@style/CalcButton"/>

        <Button
            android:id="@+id/equal"
            android:text="="
            style="@style/CalcButton"
            android:backgroundTint="#D0E5FF"/>
    </GridLayout>

</LinearLayout>




